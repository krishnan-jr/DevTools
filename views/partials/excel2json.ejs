<div id="excel2json-screen" style="display:none;">
    <h1 class="display-5 mb-4">Excel/CSV to JSON</h1>
    <div class="row g-3 mb-4">
        <div class="col-lg-4">
            <div class="card bg-dark border-secondary h-100">
                <div class="card-body d-flex align-items-center">
                    <label for="excel-header-row" class="form-label mb-0 me-2 fw-bold">Header row</label>
                    <input type="number" id="excel-header-row" class="form-control bg-dark text-light border-secondary" min="1" value="1" style="width: 80px;">
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card bg-dark border-secondary h-100">
                <div class="card-body">
                    <div id="excel-drop-area" class="border border-secondary rounded p-4 text-center" style="border-style: dashed !important; border-width: 1px; background: rgba(255,255,255,0.01);">
                        <div class="mb-2">Drag & drop any file here</div>
                        <div class="mb-2">or</div>
                        <div>
                            <label class="btn btn-outline-light btn-sm" style="cursor:pointer;">
                                <i class="bi bi-folder2-open me-1"></i> Browse files
                                <input type="file" id="excel-file-input" accept=".csv,.xls,.xlsx,.txt" style="display:none;">
                            </label>
                        </div>
                        <span id="excel-selected-filename" class="text-muted small d-block mt-2"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row g-3">
        <div class="col-12">
            <div class="card bg-dark border-secondary mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-end gap-2 mb-2">
                        <span class="fw-bold me-auto">JSON Output</span>
                        <button class="btn btn-outline-light btn-sm" id="excel-json-copy"><i class="bi bi-clipboard me-1"></i> Copy</button>
                        <button class="btn btn-outline-light btn-sm" id="excel-json-download"><i class="bi bi-download me-1"></i> Download</button>
                    </div>
                    <div id="excel-json-editor" style="height: 400px; width: 100%; border-radius: 8px; overflow: hidden;"></div>
                </div>
            </div>
        </div>
    </div>
</div> 