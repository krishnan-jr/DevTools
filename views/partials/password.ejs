<div id="password-generator-screen">
    <h1 class="display-5 mb-4">Password Generator</h1>
    <div class="card bg-dark border-secondary mb-4">
        <div class="card-body">
            <form id="password-config-form">
                <div class="row g-3 mb-3">
                    <div class="col-md-3">
                        <label class="form-label mb-0" for="lowercase">Lowercase</label>
                        <div class="form-check form-switch mt-1">
                            <input class="form-check-input" type="checkbox" id="lowercase" checked>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label mb-0" for="uppercase">Uppercase</label>
                        <div class="form-check form-switch mt-1">
                            <input class="form-check-input" type="checkbox" id="uppercase" checked>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label mb-0" for="digits">Digits</label>
                        <div class="form-check form-switch mt-1">
                            <input class="form-check-input" type="checkbox" id="digits" checked>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label mb-0" for="special">Special</label>
                        <div class="form-check form-switch mt-1">
                            <input class="form-check-input" type="checkbox" id="special" checked>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="excluded-chars" class="form-label">Excluded Characters</label>
                    <input type="text" id="excluded-chars" class="form-control bg-dark text-light border-secondary" placeholder="(Optional)">
                </div>
                <div class="row g-3 align-items-center mb-3">
                    <div class="col-md-3">
                        <label for="password-length" class="form-label mb-0">Length</label>
                        <input type="number" id="password-length" class="form-control bg-dark text-light border-secondary" min="4" max="128" value="16" style="width: 80px;">
                    </div>
                    <div class="col-md-3">
                        <label for="password-count" class="form-label mb-0">Count</label>
                        <input type="number" id="password-count" class="form-control bg-dark text-light border-secondary" min="1" max="20" value="1" style="width: 80px;">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-lightning-charge me-2"></i> Generate Password(s)
                </button>
            </form>
        </div>
    </div>
    <div class="card bg-dark border-secondary">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="fw-bold">Passwords</span>
                <button class="btn btn-outline-light btn-sm" id="copy-passwords"><i class="bi bi-clipboard me-1"></i> Copy</button>
            </div>
            <div id="password-editor" style="height: 380px; width: 100%; border-radius: 8px; overflow: hidden;"></div>
        </div>
    </div>
</div> 