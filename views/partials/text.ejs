<div id="text-analyzer-screen" style="display:none;">
    <h1 class="display-5 mb-4">Text Analyzer and Utilities</h1>
    <div class="row g-3">
        <div class="col-lg-9">
            <div class="card bg-dark border-secondary mb-4">
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Convert line break</label>
                        <div class="btn-group ms-2 gap-2" role="group">
                            <button type="button" class="btn btn-outline-light btn-sm" id="btn-lf"><i class="bi bi-arrow-down me-1"></i> LF (\n)</button>
                            <button type="button" class="btn btn-outline-light btn-sm" id="btn-crlf"><i class="bi bi-arrow-down-up me-1"></i> CRLF (\r\n)</button>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Convert case</label>
                        <div class="d-flex flex-wrap gap-2">
                            <button class="btn btn-outline-light btn-sm" data-case="lower"><i class="bi bi-type me-1"></i> lower case</button>
                            <button class="btn btn-outline-light btn-sm" data-case="upper"><i class="bi bi-type me-1"></i> UPPER CASE</button>
                            <button class="btn btn-outline-light btn-sm" data-case="sentence"><i class="bi bi-type me-1"></i> Sentence case</button>
                            <button class="btn btn-outline-light btn-sm" data-case="title"><i class="bi bi-type me-1"></i> Title Case</button>
                            <button class="btn btn-outline-light btn-sm" data-case="camel"><i class="bi bi-type me-1"></i> camelCase</button>
                            <button class="btn btn-outline-light btn-sm" data-case="pascal"><i class="bi bi-type me-1"></i> PascalCase</button>
                            <button class="btn btn-outline-light btn-sm" data-case="snake"><i class="bi bi-type me-1"></i> snake_case</button>
                            <button class="btn btn-outline-light btn-sm" data-case="constant"><i class="bi bi-type me-1"></i> CONSTANT_CASE</button>
                            <button class="btn btn-outline-light btn-sm" data-case="kebab"><i class="bi bi-type me-1"></i> kebab-case</button>
                            <button class="btn btn-outline-light btn-sm" data-case="cobol"><i class="bi bi-type me-1"></i> COBOL-CASE</button>
                            <button class="btn btn-outline-light btn-sm" data-case="train"><i class="bi bi-type me-1"></i> Train-Case</button>
                            <button class="btn btn-outline-light btn-sm" data-case="alt"><i class="bi bi-type me-1"></i> aLtErNaTiNg cAsE</button>
                            <button class="btn btn-outline-light btn-sm" data-case="inverse"><i class="bi bi-type me-1"></i> InVeRsE CaSe</button>
                            <button class="btn btn-outline-light btn-sm" data-case="random"><i class="bi bi-type me-1"></i> raNdoM cASe</button>
                        </div>
                    </div>
                    <div class="mb-0">
                        <label class="form-label fw-bold">Sort lines</label>
                        <div class="d-flex flex-wrap gap-2">
                            <button class="btn btn-outline-light btn-sm" data-sort="alpha"><i class="bi bi-sort-alpha-down me-1"></i> Alphabetize</button>
                            <button class="btn btn-outline-light btn-sm" data-sort="reverse-alpha"><i class="bi bi-sort-alpha-down-alt me-1"></i> Reverse alphabetize</button>
                            <button class="btn btn-outline-light btn-sm" data-sort="last-word"><i class="bi bi-sort-alpha-down me-1"></i> Alphabetize by last word</button>
                            <button class="btn btn-outline-light btn-sm" data-sort="reverse-last-word"><i class="bi bi-sort-alpha-down-alt me-1"></i> Reverse alphabetize by last word</button>
                            <button class="btn btn-outline-light btn-sm" data-sort="reverse"><i class="bi bi-arrow-repeat me-1"></i> Reverse</button>
                            <button class="btn btn-outline-light btn-sm" data-sort="random"><i class="bi bi-shuffle me-1"></i> Randomize</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card bg-dark border-secondary">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-end gap-2 mb-2">
                        <button class="btn btn-outline-light btn-sm" id="btn-show-original" disabled><i class="bi bi-arrow-repeat me-1"></i> Show original text</button>
                        <button class="btn btn-outline-light btn-sm" id="btn-paste"><i class="bi bi-clipboard-plus me-1"></i> Paste</button>
                        <button class="btn btn-outline-light btn-sm" id="btn-clear"><i class="bi bi-x-circle me-1"></i> Clear</button>
                        <button class="btn btn-outline-light btn-sm" id="btn-copy"><i class="bi bi-clipboard me-1"></i> Copy</button>
                    </div>
                    <div id="text-editor" style="height: 320px; width: 100%; border-radius: 8px; overflow: hidden;"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card bg-dark border-secondary">
                <div class="card-body p-3">
                    <div class="fw-bold mb-2">Statistics</div>
                    <table class="table table-dark table-sm mb-0" id="text-stats-table">
                        <tbody>
                            <tr><td>Length</td><td id="stat-length">0</td></tr>
                            <tr><td>Start position</td><td id="stat-start">0</td></tr>
                            <tr><td>End position</td><td id="stat-end">0</td></tr>
                            <tr><td>Line</td><td id="stat-line">1</td></tr>
                            <tr><td>Column</td><td id="stat-column">0</td></tr>
                            <tr><td>Bytes</td><td id="stat-bytes">0</td></tr>
                            <tr><td>Characters</td><td id="stat-chars">0</td></tr>
                            <tr><td>Words</td><td id="stat-words">0</td></tr>
                            <tr><td>Sentences</td><td id="stat-sentences">0</td></tr>
                            <tr><td>Paragraphs</td><td id="stat-paragraphs">1</td></tr>
                            <tr><td>Lines</td><td id="stat-lines">1</td></tr>
                            <tr><td>Line break</td><td id="stat-linebreak">Unknown</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 