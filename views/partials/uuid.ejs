<div id="uuid-generator-screen" style="display:none;">
    <h1 class="display-5 mb-4">UUID Generator</h1>
    <div class="card bg-dark border-secondary mb-4">
        <div class="card-body">
            <form id="uuid-config-form">
                <div class="row g-3 align-items-center mb-3">
                    <div class="col-md-2">
                        <label for="uuid-count" class="form-label mb-0">Count</label>
                        <input type="number" id="uuid-count" class="form-control bg-dark text-light border-secondary"
                            min="1" max="20" value="1" style="width: 80px;">
                    </div>
                    <div class="col-md-3">
                        <label for="uuid-version" class="form-label mb-0 text-start">UUID version</label>
                        <div class="dropdown" id="uuid-version-dropdown" style="width: 220px;">
                            <button class="btn btn-outline-light btn-sm dropdown-toggle w-100 d-flex justify-content-between align-items-center" type="button" id="uuid-version-btn" data-bs-toggle="dropdown" aria-expanded="false">
                                <span>4 (GUID)</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-dark w-100" aria-labelledby="uuid-version-btn">
                                <li><a class="dropdown-item" href="#" data-value="v1">1</a></li>
                                <li><a class="dropdown-item active" href="#" data-value="v4">4 (GUID)</a></li>
                                <li><a class="dropdown-item" href="#" data-value="v7">7</a></li>
                            </ul>
                            <input type="hidden" id="uuid-version" value="v4">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label mb-0" for="uuid-hyphens">Hyphens</label>
                        <div class="form-check form-switch mt-1">
                            <input class="form-check-input" type="checkbox" id="uuid-hyphens" checked>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label mb-0" for="uuid-uppercase">Uppercase</label>
                        <div class="form-check form-switch mt-1">
                            <input class="form-check-input" type="checkbox" id="uuid-uppercase">
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-lightning-charge me-2"></i> Generate UUID(s)
                </button>
            </form>
        </div>
    </div>
    <div class="card bg-dark border-secondary">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="fw-bold">UUID(s)</span>
                <button class="btn btn-outline-light btn-sm" id="copy-uuids"><i class="bi bi-clipboard me-1"></i>
                    Copy</button>
            </div>
            <div id="uuid-editor" style="height: 380px; width: 100%; border-radius: 8px; overflow: hidden;"></div>
        </div>
    </div>
</div>